public class Player {
	private String name;
	private int age;
	private String type;
	private int statistics;

	public class Player(String name, int age, String type, int statistics) {
		this.name = name;
		this.age = age;
		this.type = type;
		this.statistics = statistics;
	}
	public String getName() {
        return this.name;
    }
    public int getAge() {
        return this.age;
    }
    public int getType() {
        return this.type;
    }
    public int getstatistics() {
        return this.statistics;
    }
    public double getAverage(String type, int statistics, int noOfMatches) {
        double average = statistics/noOfMatches;
        return average;
    }
    public void getPlayerDetails(Player p) {
        
        System.out.println("Player Name:" + p.name);
        System.out.println("Player Age:" + p.age);
        System.out.println("Player Type:" + p.type);
        System.out.println("Player average:" + p.getAverage( p.type, p.statistics, 15));
    }
    public void getBestPerformance(Player p) {
  
    }
 }

